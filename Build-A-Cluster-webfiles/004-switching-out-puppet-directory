# Checkout empty repository
cd /root/
svn co https://localhost/puppet/

# copy puppet installation into empty repository
cp -R /etc/puppet/ /root/puppet/

# add all of files to the repository and commit
cd /root/puppet/
svn add *
export EDITOR=vim
svn ci

# remove /etc/puppet and replace it with version controled directory
rm -rf /etc/puppet/
svn co https://localhost/puppet/ /etc/
